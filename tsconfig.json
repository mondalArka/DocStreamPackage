{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "typeRoots": [
            "./src/types",
            "node_modules/@types"
        ],
        "types": [
            "node",
            "express"
        ],
        "emitDecoratorMetadata": true,
        "declaration": true,
        "declarationDir": "./dist/declarations"
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        "src/**/*.ts"
    ]
}